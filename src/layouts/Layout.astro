<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	body {
            font-family: Arial, sans-serif;
            background-color: #40E0D0;
            color: white;
            margin: 0;
            padding: 0;
			min-height: 100vh;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
    }

	.nav {
            display: flex;
			justify-content: flex-end;
			background-color: #ddd;
			padding: 1em;
    }
	.nav a {
		color: blue;
		text-decoration: none;
		margin-left: 10px;
		display: inline;
	}
	.nav a:hover{
		text-decoration: underline;
	}

	input{
		color: #333;
	}

	footer{
		background-color: #333;
		color: white;
		padding: 1em;
		text-align: center;
		margin: auto auto 0 auto;
	}

	footer p{
		margin-bottom: 20px;
	}

	footer h3{
		font-weight: bold;
	}

	footer .enlaces{
		display: flex;
		justify-content: center;
		margin-top: 1em;
		flex-wrap: wrap;
		gap: 1em;
	}
	footer a{
		color: yellow;
		text-decoration: none;
	}
	footer a:hover{
		text-decoration: underline;
	}
</style>
